        body {
            font-family: Arial, sans-serif;
            background-color: #f0f5ff; /* Light blue background */
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        .container {
            width: 50%;
            margin: 0 auto;
            padding: 20px;
            background-color: #fff; /* White background */
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            margin-top: 50px;
        }

        h2 {
            text-align: center;
            margin-bottom: 20px;
        }

        form {
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        label {
            font-weight: bold;
            margin-bottom: 10px;
        }

        input[type="text"],
        input[type="email"] {
            width: 100%;
            padding: 10px;
            margin-bottom: 20px;
            border-radius: 5px;
            border: 1px solid #ccc;
            box-sizing: border-box;
        }

        input[type="submit"] {
            width: 50%;
            padding: 10px;
            border: none;
            background-color: #6495ED; /* Cornflower blue */
            color: #fff; /* White text color */
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        input[type="submit"]:hover {
            background-color: #4169E1; /* Darker shade of blue on hover */
        }

        .candidate-container {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    margin-top: 20px;
}

.candidate {
    width: calc(33.33% - 20px); /* Set width for each candidate, considering margin */
    margin-bottom: 20px;
    background-color: #fff; /* Background color */
    border-radius: 10px; /* Rounded corners */
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Drop shadow */
    padding: 20px;
    box-sizing: border-box;
}

.candidate:nth-child(3n+1) {
    margin-right: 0; /* Remove right margin for the first candidate in each row */
}

/* Additional styling for candidate name and credit card */
.candidate h2 {
    margin-top: 0;
    font-size: 16px;
    color: #333; /* Text color */
}

.candidate p {
    margin-bottom: 0;
    font-size: 14px;
    color: #666; /* Text color */
}



    </style>
